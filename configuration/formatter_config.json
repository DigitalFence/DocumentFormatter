{
  "external_reference_folder": "/Users/KDP/WordFormatReference",
  "reference_template": "ReferenceFormat.dotx",
  "style_overrides": {
    "Normal": {
      "font_name": "Aptos Light",
      "font_size": 12.0,
      "line_spacing": 1.4
    },
    "Title": {
      "font_name": "Aptos Light",
      "font_size": 48.0
    },
    "Subtitle": {
      "font_name": "Aptos Light",
      "font_size": 36.0
    }
  },
  "heading_overrides": {
    "heading_1": {
      "font_name": "Aptos Light",
      "font_size": 16.0,
      "color": "156082",
      "alignment": "center"
    },
    "heading_2": {
      "font_name": "Aptos Light",
      "font_size": 14.0,
      "color": "156082",
      "alignment": "center",
      "space_before": 8.0,
      "space_after": 16.8
    },
    "heading_3": {
      "font_name": "Aptos Light",
      "font_size": 13.5,
      "italic": true,
      "space_before": 4.0,
      "space_after": 2.0
    },
    "heading_4": {
      "font_name": "Aptos Light",
      "italic": true
    },
    "heading_5": {
      "font_name": "Aptos Light",
      "italic": true,
      "color": "595959",
      "space_before": 2.0
    },
    "heading_6": {
      "font_name": "Aptos Light",
      "italic": true,
      "color": "595959"
    }
  },
  "heading_detection": {
    "title_keywords": [
      "title"
    ],
    "dedication_keywords": [
      "dedicated to",
      "dedication",
      "in memory of"
    ],
    "contents_keywords": [
      "contents",
      "table of contents",
      "toc"
    ],
    "section_keywords": [
      "section",
      "part"
    ],
    "chapter_keywords": [
      "chapter"
    ],
    "always_use_heading_1_for_chapters": true
  },
  "page_breaks": {
    "before_sections": false,
    "before_chapters": true,
    "after_title": true,
    "after_dedication": true,
    "after_contents": true,
    "preserve_original": true
  },
  "blockquote_formatting": {
    "remove_em_dashes": true,
    "single_line_spacing": true,
    "center_align": true,
    "italic": true
  },
  "special_content_formatting": {
    "hierarchical_lists": {
      "enabled": true,
      "detect_patterns": [
        "roles",
        "principles",
        "teachings",
        "qualities",
        "attributes",
        "characteristics",
        "types",
        "categories",
        "elements",
        "aspects",
        "dimensions"
      ],
      "numbered_item_style": "List Paragraph",
      "bullet_point_style": "List Paragraph",
      "detection_rules": {
        "numbered_pattern": "^\\d+\\.\\s+[A-Z]",
        "section_keywords": [
          "roles",
          "principles",
          "qualities",
          "attributes",
          "types",
          "aspects"
        ],
        "min_items": 2,
        "auto_detect_heading": true
      }
    }
  },
  "chapter_opening_quote": {
    "enabled": true,
    "subtle_emphasis": true,
    "font_size_reduction": 1,
    "italic": true,
    "color": "666666",
    "spacing_after": 18,
    "detect_patterns": [
      "verse",
      "quote",
      "translation",
      "transliteration"
    ]
  },
  "chapter_closing_content": {
    "enabled": true,
    "subtle_emphasis": true,
    "font_size_reduction": 1,
    "italic": true,
    "color": "666666",
    "spacing_before": 18,
    "detect_patterns": [
      "story",
      "poem",
      "verse"
    ]
  },
  "chapter_separator": {
    "enabled": true,
    "symbol": "\u2766",
    "symbol_source": "Symbols.docx",
    "comment": "Symbol source filename (looks in external_reference_folder first, then References/)",
    "position": "after",
    "spacing_before": 12,
    "spacing_after": 12,
    "font_size": 14
  },
  "ai_validation": {
    "enabled": true,
    "comment": "Enable validation to detect AI hallucinations and fabricated content",
    "check_dialogue": true,
    "check_length_ratio": true,
    "check_suspicious_speakers": true,
    "max_length_ratio": 1.2,
    "dialogue_tolerance": 1.5
  }
}